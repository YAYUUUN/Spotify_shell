                </LinearLayout>
            </HorizontalScrollView>

            <!-- Espacio al final para que el contenido no quede pegado al borde -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
